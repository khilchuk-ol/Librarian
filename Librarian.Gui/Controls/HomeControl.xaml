<UserControl x:Class="Librarian.Gui.Controls.HomeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vm="clr-namespace:Librarian.Gui.ViewModels" d:DataContext="{d:DesignInstance Type=vm:HomeViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <DataTemplate DataType="{x:Type vm:HomeViewModel}"/>
    </UserControl.Resources>
    <Grid>
        <TextBlock Text="{Binding Message}" 
                   TextAlignment="Center" FontSize="28" FontWeight="Light"
                   Height="75" Width="484" 
                   HorizontalAlignment="Center" VerticalAlignment="Center" />
    </Grid>
</UserControl>


